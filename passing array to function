#include <iostream>
using namespace std;
/* This function adds the corresponding
 * elements of both the arrays and
 * displays it.
 */
void sum(int arr1[], int arr2[]){
   int temp[7];
   for(int i=0; i<7; i++){
      temp[i] = arr1[i]+arr2[i];
      cout<<temp[i]<<endl;
   }
}
int main(){
   int a[7] = {10, 20, 30, 40 ,50,60,70};
   int b[7] = {1, 2, 3, 4, 5, 6, 7};
   //Passing arrays to function
   sum(a, b);
   return 0;
}
